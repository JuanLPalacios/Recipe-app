<% @recipes.each do |recipe| %>
  <%= link_to recipe do %>
    <%= recipe.name %>
    <%= recipe.description %>
  <% end %>
  <%# Deletete button must be oudside of link to work %>
  <% if can? :destroy, recipe %>
    <%= button_to "Delete", recipe, method: :delete, confirm: "Are you sure You want to delete this recipe?" %>
  <% end %>
<% end %>
