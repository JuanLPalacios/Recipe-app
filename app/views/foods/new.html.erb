
<section class="new">
    <%= form_for @food do |form| %>
      <%= form.label :name %>
      <%= form.text_field :name %>
      <%= form.label :measurement_unit %>
      <%= form.text_field :measurement_unit %>
      <%= form.label :price %>
      <%= form.number_field :price %>
      <%= form.label :quantity %>
      <%= form.number_field :quantity %>
      <%= form.submit 'Create' %>
    <% end %>
</section>