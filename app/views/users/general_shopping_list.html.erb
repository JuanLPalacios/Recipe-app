<h1>Shopping List</h1>
<secction class="shoping-totals">
  <div>
    Amount of food items to buy: <%= @items.length %>
  </div>
  <div>
    Total value of food needed: <%= number_to_currency @items.inject(0) { |sum, item| sum + item[:price] } %>
  </div>
</secction>
<section class="shoping-list">
  <header>
    <b>
      Food
    </b>
    <b>
      Quantity
    </b>
    <b>
      Price
    </b>
  </header>
  <% @items.each do |item| %>
    <article>
      <div>
        <%= item[:name] %>
      </div>
      <div>
        <%= sprintf('%g', item[:quantity]) %> <%= item[:unit] %>
      </div>
      <div>
        <%= number_to_currency item[:price] %>
      </div>
    </article>
  <% end %>
</section>