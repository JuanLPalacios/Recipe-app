<section class="new">
    <%= form_for [@recipe, @recipe_food] do |form| %>
      <%= form.label :quantity %>
      <%= form.number_field :quantity %>
      <%= form.label :food_id %>
      <% foods_list = current_user.foods.map { |food| [food.name, food.id] } %>
      <%= form.select :food_id, foods_list, selected: @recipe_food.food_id %>
      <%= form.submit 'Update' %>
    <% end %>
</section>